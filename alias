# Cute shell shortcuts
alias ls='ls --sort=extension --color=auto'
alias ll='ls -lh --color=auto'
alias pms='sudo pm-suspend'
alias psg='ps -ax | grep'
alias se='sudo vim'
alias e='vim'
alias g='grep --color -n'

alias go='gnome-open'

if `is_osx`; then
  alias c='pbcopy';
else
  alias c='xclip -selection clipboard';
fi
# vim:ft=sh
